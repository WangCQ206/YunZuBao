.everbutton{
  width: 400rpx;/*设置按钮宽度*/
	height: 65rpx;/*设置按钮高度*/
	color:white;/*字体颜色*/
  background-color:rgba(94, 132, 202, 0.712);/*按钮背景颜色*/
  border: 15rpx solid rgba(100, 148, 237, 0.712);
	border-radius: 8rpx;/*让按钮变得圆滑一点*/
	border-width: 0;/*消去按钮丑的边框*/
	margin: 1rpx;
	outline: none;/*取消轮廓*/
	font-family: KaiTi;/*字体设置为楷体*/
	font-size: 30rpx;/*设置字体大小*/
	text-align: center;/*字体居中*/
  cursor: pointer;/*设置鼠标箭头手势*/
  line-height: 65rpx;
}
