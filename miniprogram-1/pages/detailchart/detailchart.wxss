.arrow-right{
  width: 50rpx;
  height: 50rpx;
  border-top: 15rpx solid #999;
  border-right: 15rpx solid #999;
  position: absolute;
  right: 40rpx;
  transform: rotate(45deg);
  margin-top:50rpx;
  }
  .arrow-left{
    width: 50rpx;
