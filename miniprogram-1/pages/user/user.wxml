<view class="container"> 
 
  <view class="login-icon"> 
    <image class="login-img" src="/images/user/backpicture.png"></image> 
  </view> 
  <view class="login-from"> 
 
    <!--账号-->
    <view class="inputView"> 
      <image class="nameImage" src="/images/user/name.png"></image> 
      <label class="loginLab">账号</label> 
      <input class="inputText" placeholder="请输入账号" type="text" bindinput="usernameinput" /> 
    </view> 
    <view class="line"></view> 
    <!--密码-->
    <view class="inputView"> 
      <image class="keyImage" src="/images/user/user6.png"></image> 
      <label class="loginLab">密码</label> 
      <input class="inputText" placeholder="请输入密码" type="password" bindinput="passwordinput" /> 
    </view> 
    <!--按钮-->
    <view class="loginBtnView"> 
      <button class="loginBtn" type="submit" catchtap="signin">登录</button> 
    </view>
     <!--注册-->
    <view class="registerBtnView"> 
      <button class="registerBtn" type="submit" catchtap="register">注册</button> 
    </view> 
 
  </view> 
 
</view>
